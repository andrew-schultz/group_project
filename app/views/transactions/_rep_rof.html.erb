	<div class="transaction">
		<%= form_for @transaction do |t| %>
			<%= t.hidden_field :user_id, :value => @user.id %>
			<%= "Donald Trump" %>
			<!-- value 5 is republican rest of field -->
			<%= t.hidden_field :candidate_id, :value => 5 %>
			
			<br>
			<br>
			<p>Price:</p><p><%= @rep[5]["average"] %></p>
			<%= t.hidden_field :price, :value => @rep[5]["average"] %>
			<%= t.select :buysell, {"Buy" => 0, "Sell" => 1}, {:prompt => "Select a type of transaction"}, {:class => "user_input" }%>
			<br>
			<br>
			<%= t.label :shares_rep_rof %>
			<%= t.number_field :shares_rep_rof%>
			<br>
			<br>

			<%= t.submit :class => "button user_input"%>
		<% end %>

	</div>


</div>