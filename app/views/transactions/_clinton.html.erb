<div class="transaction">
	<div class="transaction">
		<%= form_for @transaction do |t| %>
			<%= t.hidden_field :user_id, :value => @user.id %>
			<%= "Hillary Clinton" %>
			<!-- value 1 is hillary -->
			<%= t.hidden_field :candidate_id, :value => 1 %>
			
			<br>
			<br>
			<p>Price:</p><p><%= @dem[1]["average"] %></p>
			<%= t.hidden_field :price, :value => @dem[1]["average"] %>
			<%= t.select :buysell, {"Buy" => 0, "Sell" => 1}, {:prompt => "Select a type of transaction"}, {:class => "user_input" }%>
			<br>
			<br>
			<%= t.label :shares_clinton %>
			<%= t.number_field :shares_clinton%>
			<br>
			<br>

			<%= t.submit :class => "button user_input"%>
		<% end %>

	</div>


</div>